<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <referenceBlock name="customer-account-navigation-downloadable-products-link" remove="true"/>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-promotion-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Promotion</argument>
                    <argument name="path" xsi:type="string">promotion/acc/view</argument>
                    <argument name="sortOrder" xsi:type="number">243</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
